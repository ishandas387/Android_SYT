<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ishan387.spotyourtrain.SeatAvailResult" android:background="@color/blue" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="2dp"
                card_view:cardElevation="5dp"
                android:id="@+id/sacard"
                android:background="@color/white"


                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/lin" android:background="@color/grey">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_margin="3dp" android:id="@+id/satnum" android:text="Blr sxofkdd" android:textAllCaps="true" android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  android:layout_margin="3dp" android:id="@+id/satname"  android:text="Blr sxofkdd" android:textAllCaps="true" android:textStyle="bold"/>


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_margin="3dp" android:layout_below="@+id/lin" android:id="@+id/safrom" android:textColor="@color/black" android:text="Blr sxofkdd" android:textAllCaps="true" android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/t" android:textColor="@color/black" android:text="TO" android:textStyle="bold" android:layout_below="@+id/safrom" android:layout_centerInParent="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_margin="3dp" android:layout_below="@+id/t" android:id="@+id/sato" android:textColor="@color/black" android:text="Blr sxofkdd" android:textAllCaps="true" android:textStyle="bold"/>
                 <!--   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_margin="3dp" android:id="@+id/saclass" android:textColor="@color/black" android:layout_below="@+id/sato" android:text="Blr sxofkdd" android:textAllCaps="true" android:textStyle="bold"/>

                   -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/saquota" android:layout_margin="3dp" android:textColor="@color/black" android:layout_below="@id/sato" android:text="Blr sxofkdd" android:textAllCaps="true" android:textStyle="bold"/>


                </RelativeLayout>


            </android.support.v7.widget.CardView>



            <android.support.v7.widget.RecyclerView
                xmlns:recy="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sarrecycle"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/sacard"
                android:background="@color/white"
                android:layout_margin="5dp"
                android:padding="2dp"






                />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
