<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.ishan387.spotyourtrain.TrainBetweenStations"
    android:background="@color/blue">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"

        ></include>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"


        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id5"




        />




    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:layout_below="@+id/tool_bar"
        card_view:contentPadding="1dp"
        card_view:cardElevation="10dp"
        android:id="@+id/cardtbs"
        android:visibility="gone"



        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_above="@+id/adView5">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/from" android:text="MysoreadfgdhgghhjjkHFHHHH " android:layout_alignParentLeft="true"
            android:padding="2dp" android:textColor="@color/black" android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:text="TO" android:layout_centerInParent="true" android:id="@+id/t"
                android:layout_below="@+id/from"
                android:padding="2dp" android:textColor="@color/black"/>



            <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:id="@+id/to" android:text="Bangalorejhgjgjh hggjugjggjgjgj" android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/t"
                android:layout_alignParentEnd="true" android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content" android:id="@+id/d" android:text="28-07-2015" android:padding="2dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/to"
                 android:textStyle="bold" />
        </RelativeLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        xmlns:recy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tbst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardtbs"

        android:padding="2dp"






        />

</RelativeLayout>
